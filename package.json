{
  "name": "kbbi-selection-enhancer-chrome",
  "version": "1.0.0",
  "repository": "git@github.com:Shiou-Ju/kbbi-selection-enhancer-chrome.git",
  "author": "Bamboo <75402531+Shiou-Ju@users.noreply.github.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "copy-necessary-build-files": "cp manifest.json dist/ && cp -r icons dist/ && cp src/extensionStyles.css dist/",
    "build": "rm -rf dist && webpack --mode production && yarn copy-necessary-build-files",
    "build-dev": "rm -rf dist && webpack --mode development && yarn copy-necessary-build-files",
    "test": "yarn build-dev && PUPPETEER_DISABLE_HEADLESS_WARNING=true  jest --verbose  --coverage --runInBand",
    "test-kbbi-page": "yarn build-dev && PUPPETEER_DISABLE_HEADLESS_WARNING=true jest --verbose --coverage tests/selector.test.ts",
    "test-context-menu": "yarn build-dev && PUPPETEER_DISABLE_HEADLESS_WARNING=true jest --verbose --coverage tests/context-menu.test.ts",
    "test-copy-functions": "yarn build-dev && PUPPETEER_DISABLE_HEADLESS_WARNING=true jest --verbose --coverage tests/extension.test.ts",
    "build-legacy": "rm -rf dist && tsc && cp manifest.json dist/ && cp -r icons dist/",
    "format": "prettier --write \"**/*.{ts,js,json}\""
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@types/chrome": "^0.0.256",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/puppeteer": "^7.0.4",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "date-fns": "^3.0.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "html-loader": "^4.2.0",
    "jest": "^29.7.0",
    "jest-puppeteer": "^9.0.2",
    "prettier": "^3.1.1",
    "puppeteer": "^21.6.1",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
