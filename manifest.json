{
  "manifest_version": 3,
  "name": "KBBI Selection Enhancer",
  "version": "1.1",
  "description": "Enhance text selection on KBBI.co.id",
  "icons": {
    "16": "./Flag_of_Indonesia.PNG",
    "48": "./Flag_of_Indonesia.PNG",
    "128": "./Flag_of_Indonesia.PNG"
  },
  "permissions": ["contextMenus"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://kbbi.co.id/*"],
      "js": ["content.js"]
    }
  ]
}
